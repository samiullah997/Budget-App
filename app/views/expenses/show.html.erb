<div class="w-full flex mx-auto md:w-2/3">
  <div class="mx-auto">
 <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 text-green-500 font-medium rounded-lg mb-5 inline-block" id="notice"><%= notice %></p>
    <% end %> 
    <%= render @expense %>
    <%= link_to 'Edit this expense', edit_group_expense_path(@group, @expense), class: "mt-2 rounded-lg inline-block font-medium px-5 py-3 bg-gray-100" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this expense', group_expense_path(@group, @expense), method: :delete, class: "mt-2 bg-gray-100 font-medium rounded-lg py-3 px-5" %>
    </div>
    <%= link_to 'Back to expenses', group_expenses_path, class: "ml-2 rounded-lg py-3 px-5 inline-block font-medium bg-gray-100" %>
  </div>
</div>